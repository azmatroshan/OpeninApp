<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state -->
    <item android:state_checked="true">
        <shape android:shape="ring">
            <!-- Customize the background color for the selected tab -->
            <solid android:color="#FF0000" /> <!-- Replace with your desired color -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <!-- Customize the background color for the unselected tabs -->
            <solid android:color="#FFFFFF" /> <!-- Replace with your desired color -->
        </shape>
    </item>
</selector>
